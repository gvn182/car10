<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="top" android:background="#FFF">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/lblMensagem"
        android:text="Por favor, atualize seus dados cadastrais para que possamos efetuar a aprovação de seu orçamento."
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/svForm"
        android:layout_below="@+id/lblMensagem"
        android:layout_centerHorizontal="true">



        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="vertical">

            <View
                android:background="#dbdbdb"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                />

            <View
                android:background="#dbdbdb"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                />
            <LinearLayout
                android:layout_height="70dp"
                android:layout_width="wrap_content" android:orientation="horizontal">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:textStyle="bold"
                    android:textColor="#1C1C1C"
                    android:gravity="center_vertical"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="NOME COMPLETO" />


                <EditText
                    android:id="@+id/txtNomeCompleto"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:hint="Obrigatório"
                    android:layout_weight="1" />


            </LinearLayout>
            <View
                android:background="#dbdbdb"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                />
            <LinearLayout
                android:layout_height="70dp"
                android:layout_width="wrap_content" android:orientation="horizontal">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#1C1C1C"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="CPF" />


                <EditText
                    android:id="@+id/txtCPF"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:hint="Obrigatório"
                    android:layout_weight="1" />


            </LinearLayout>
            <View
                android:background="#dbdbdb"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                />
            <LinearLayout
                android:layout_height="70dp"
                android:layout_width="wrap_content" android:orientation="horizontal">

                <TextView
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:textStyle="bold"
                    android:textColor="#1C1C1C"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="DATA DE NASCIMENTO" />


                <TextView
                    android:id="@+id/txtDataNascimento"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:hint="Selecionar..."
                    android:layout_weight="1" />




            </LinearLayout>
            <View
                android:background="#dbdbdb"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                />
            <LinearLayout
                android:layout_height="70dp"
                android:layout_width="wrap_content" android:orientation="horizontal">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#1C1C1C"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="SEXO" />


                <Spinner
                    android:id="@+id/ddSexo"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />


            </LinearLayout>
            <View
                android:background="#dbdbdb"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                />
            <LinearLayout
                android:layout_height="70dp"
                android:layout_width="wrap_content" android:orientation="horizontal">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#1C1C1C"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="ESTADO CIVIL" />


                <Spinner
                    android:id="@+id/ddEstadoCivil"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />


            </LinearLayout>
            <View
                android:background="#dbdbdb"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                />
            <LinearLayout
                android:layout_height="70dp"
                android:layout_width="wrap_content" android:orientation="horizontal">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#1C1C1C"
                    android:text="TELEFONE 1"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceMedium" />



                <EditText
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_width="60dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="3"
                    android:id="@+id/txtDDD"
                    android:hint="DDD"
                    android:layout_weight="1" />

                <EditText
                    android:maxLength="10"
                    android:layout_width="120dp"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/txtTelefone"
                    android:hint="Obrigatório"
                    android:layout_weight="1" />

            </LinearLayout>
            <View
                android:background="#dbdbdb"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                />
            <LinearLayout
                android:layout_height="70dp"
                android:layout_width="wrap_content" android:orientation="horizontal">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#1C1C1C"
                    android:text="TELEFONE 2"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceMedium" />



                <EditText
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_width="60dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="3"
                    android:id="@+id/txtDDD2"
                    android:hint="DDD"
                    android:layout_weight="1" />

                <EditText
                    android:maxLength="10"
                    android:layout_gravity="center_vertical"
                    android:layout_width="120dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/txtTelefone2"
                    android:layout_weight="1" />

            </LinearLayout>
            <View
                android:background="#dbdbdb"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                />
            <LinearLayout
                android:layout_height="70dp"
                android:layout_width="wrap_content" android:orientation="horizontal">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#1C1C1C"
                    android:text="TELEFONE 3"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceMedium" />



                <EditText
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_width="60dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="3"
                    android:id="@+id/txtDDD3"
                    android:hint="DDD"
                    android:layout_weight="1" />

                <EditText
                    android:maxLength="10"
                    android:layout_gravity="center_vertical"
                    android:layout_width="120dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/txtTelefone3"
                    android:layout_weight="1" />


            </LinearLayout>
            <View
                android:background="#dbdbdb"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                />


            <LinearLayout
                android:layout_height="55dp"
                android:layout_width="wrap_content" android:orientation="horizontal">
            </LinearLayout>

        </LinearLayout>



    </ScrollView>

    <LinearLayout android:id="@+id/footer" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:layout_alignParentBottom="true" style="@android:style/ButtonBar" android:background="#FFF">

        <Button android:id="@+id/cancelButton" android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:background="#011F83"
            android:textColor="#FFFFFF"
            android:text="CANCELAR" />

        <View android:layout_height="fill_parent"
            android:layout_width="2px"
            android:textColor="#FFFFFF"
            android:background="#FFF"  />

        <Button android:id="@+id/btnNext" android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:background="#011F83"
            android:textColor="#FFFFFF" android:fontFamily="HelveticaNeue-Medium"
            android:text="SALVAR" />
    </LinearLayout>




</RelativeLayout>
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="#dbdbdb"
        android:dividerHeight="1dp"
        android:background="#FFF"/>
</android.support.v4.widget.DrawerLayout>