<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="top" android:background="#FFF">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:id="@+id/imageLayout"
        android:gravity="bottom" android:background="@drawable/placeholder">



        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/lblOficina"
            android:fontFamily="HelveticaNeue-Medium"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Oficina Teste São Bernardo"
            android:textColor="#FFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_below="@id/lblOficina"
            android:src="@drawable/s_1_star_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar" />
        <TextView
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:id="@+id/lblValor"
            android:layout_toRightOf="@+id/lblOficina"
            android:layout_above="@+id/ratingBar"
            android:fontFamily="HelveticaNeue-Medium"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="R$ 123,00"
            android:textColor="#FFF"
            android:layout_width="180dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginRight="10dp"
            android:layout_below="@+id/lblOficina"
            android:gravity="right"
            android:id="@+id/lblTempo"
            android:layout_toRightOf="@+id/lblOficina"
            android:fontFamily="HelveticaNeue-Medium"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Tempo para conserto: 5 dias"
            android:textColor="#FFF"
            android:layout_width="180dp"
            android:layout_height="wrap_content" />


        </RelativeLayout>



    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/svForm"
        android:layout_below="@+id/imageLayout"
        android:layout_centerHorizontal="true">



        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="vertical">


          <LinearLayout
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">


                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="#dbdbdb"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="DATA DE ABERTURA" />

              <View android:layout_height="fill_parent"
                  android:layout_width="2px"
                  android:textColor="#dbdbdb"
                  android:background="#dbdbdb"  />

              <TextView
                  android:layout_marginTop="10dp"

                  android:layout_marginLeft="20dp"
                  android:layout_width="150dp"
                  android:layout_height="wrap_content"
                  android:textColor="#dbdbdb"
                  android:fontFamily="HelveticaNeue-Medium"
                  android:textAppearance="?android:attr/textAppearanceSmall"
                  android:text="VALIDADE" />


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="0dp"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="#111"
                    android:id="@+id/lblAbertura"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />

                <View android:layout_height="25dp"
                    android:layout_width="2px"
                    android:textColor="#dbdbdb"
                    android:background="#dbdbdb"  />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_width="150dp"
                    android:id="@+id/lblValidade"
                    android:layout_height="wrap_content"
                    android:textColor="#111"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />


            </LinearLayout>

            <View
                android:background="#dbdbdb"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="#dbdbdb"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="DISTÂNCIA OFICINA" />

                <View android:layout_height="fill_parent"
                    android:layout_width="2px"
                    android:textColor="#dbdbdb"
                    android:background="#dbdbdb"  />

                <TextView
                    android:layout_marginTop="10dp"

                    android:layout_marginLeft="20dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="#dbdbdb"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="CORTESIA" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="#111"
                    android:id="@+id/lblDistancia"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />

                <View android:layout_height="25dp"
                    android:layout_width="2px"
                    android:textColor="#dbdbdb"
                    android:background="#dbdbdb"  />

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/imgCortesia_1"
                    android:src="@drawable/icon_cortesia_limpo"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageView

                    android:id="@+id/imgCortesia_2"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/icon_cortesia_aspirador"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageView
                    android:id="@+id/imgCortesia_3"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/icon_cortesia_lavagem"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageView
                    android:id="@+id/imgCortesia_4"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/icon_cortesia_ducha"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageView
                    android:id="@+id/imgCortesia_5"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/icon_cortesia_levatras"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageView
                    android:id="@+id/imgCortesia_6"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/icon_cortesia_polimento"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

            </LinearLayout>

            <View
                android:background="#dbdbdb"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">


                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="#dbdbdb"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="PEÇAS A TROCAR" />

                <View android:layout_height="fill_parent"
                    android:layout_width="2px"
                    android:textColor="#dbdbdb"
                    android:background="#dbdbdb"  />

                <TextView
                    android:layout_marginTop="10dp"

                    android:layout_marginLeft="20dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="#dbdbdb"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="PEÇAS A RECUPERAR" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="120dp"
                    android:id="@+id/lblPecasAtrocar"
                    android:layout_height="wrap_content"
                    android:textColor="#111"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                   />
                <ImageView
                    android:id="@+id/imgPecasTrocar"
                    android:layout_marginRight="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/arrow_down"/>

                <View android:layout_height="25dp"
                    android:layout_width="2px"
                    android:textColor="#dbdbdb"
                    android:background="#dbdbdb"  />


                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="120dp"
                    android:text="-"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:textColor="#111"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />
                <ImageView

                    android:id="@+id/imgPecasRecuperar"
                    android:layout_marginRight="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/arrow_down"/>


            </LinearLayout>
            <View
                android:background="#dbdbdb"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="#dbdbdb"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="TOTAL MÃO DE OBRA" />

                <View android:layout_height="fill_parent"
                    android:layout_width="2px"
                    android:textColor="#dbdbdb"
                    android:background="#dbdbdb"  />

                <TextView
                    android:layout_marginTop="10dp"

                    android:layout_marginLeft="20dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="#dbdbdb"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="DESCONTO" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/lblTotalMaoDeObra"
                    android:layout_marginLeft="20dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="#111"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />

                <View android:layout_height="25dp"
                    android:layout_width="2px"
                    android:textColor="#dbdbdb"
                    android:background="#dbdbdb"  />

                <TextView
                    android:id="@+id/lblDesconto"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="#111"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                     />


            </LinearLayout>

            <View
                android:background="#dbdbdb"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:textColor="#dbdbdb"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="FORMA DE PAGAMENTO" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgBoleto"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_pagamento_boleto"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <ImageView
                        android:id="@+id/imgDebito"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_pagamento_debito"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <ImageView
                        android:id="@+id/imgCredito"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_pagamento_credito"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <ImageView
                        android:id="@+id/imgCheque"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_pagamento_cheque"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <ImageView
                        android:id="@+id/imgParcelamento"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_pagamento_parcelado"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <ImageView
                        android:id="@+id/imgDinheiro"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/icon_pagamento_debito"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_height="55dp"
                android:layout_width="wrap_content" android:orientation="horizontal">
            </LinearLayout>
            <LinearLayout
                android:layout_height="55dp"
                android:layout_width="wrap_content" android:orientation="horizontal">
            </LinearLayout>

        </LinearLayout>



    </ScrollView>

    <LinearLayout android:id="@+id/footer" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:layout_alignParentBottom="true" style="@android:style/ButtonBar" android:background="#FFF">



        <Button android:id="@+id/btnAprovar" android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:background="#64BE5A"
            android:textColor="#FFFFFF" android:fontFamily="HelveticaNeue-Medium"
            android:text="APROVAR ORÇAMENTO" />
    </LinearLayout>




</RelativeLayout>
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="#dbdbdb"
        android:dividerHeight="1dp"
        android:background="#FFF"/>
</android.support.v4.widget.DrawerLayout>