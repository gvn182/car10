<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="top" android:background="#FFF">

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/imgstep3"
        android:src="@drawable/steps_3" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/svForm"
        android:layout_below="@+id/imgstep3"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="vertical">


            <View
                android:background="#dbdbdb"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                />


            <LinearLayout
                android:layout_height="40dp"
                android:layout_width="wrap_content" android:orientation="horizontal">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#1C1C1C"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Placa" />



                <EditText
                    android:layout_marginLeft="50dp"
                    android:layout_width="0dp"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/txtPlaca"
                    android:hint="Obrigatório"
                    android:layout_weight="1" />






            </LinearLayout>
            <View
                android:background="#dbdbdb"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                />
            <LinearLayout
                android:layout_height="55dp"
                android:layout_width="wrap_content" android:orientation="horizontal">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#1C1C1C"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="FABR./MARCA" />



                <Spinner
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="50dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/ddMarca"
                    android:layout_weight="1" />

            </LinearLayout>
            <View
                android:background="#dbdbdb"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                />
            <LinearLayout
                android:layout_height="40dp"
                android:layout_width="wrap_content" android:orientation="horizontal">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#1C1C1C"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="MODELO" />


                <Spinner
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="50dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/ddModelo"
                    android:layout_weight="1" />






            </LinearLayout>
            <View
                android:background="#dbdbdb"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                />
            <LinearLayout
                android:layout_height="60dp"
                android:layout_width="wrap_content" android:orientation="horizontal">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#1C1C1C"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="ANO/MODELO" />


                <EditText
                    android:layout_marginLeft="50dp"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="4"
                    android:id="@+id/txtAnoModelo"
                    android:hint="Obrigatório"
                    android:layout_weight="1" />






            </LinearLayout>
            <View
                android:background="#dbdbdb"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                />
            <LinearLayout
                android:layout_height="55dp"
                android:layout_width="wrap_content" android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#1C1C1C"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="COR" />



                <Spinner
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="50dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/ddCor"
                    android:layout_weight="1" />






            </LinearLayout>

            <View
                android:background="#dbdbdb"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                />
            <LinearLayout
                android:layout_height="55dp"
                android:layout_width="wrap_content" android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#1C1C1C"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="PINTURA" />



                <Spinner
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="50dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/ddPintura"
                    android:layout_weight="1" />






            </LinearLayout>
            <View
                android:background="#dbdbdb"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                />
            <LinearLayout
                android:layout_height="55dp"
                android:layout_width="wrap_content" android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#1C1C1C"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="VEÍCULO BLINDADO?" />





                <Switch
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:id="@+id/chkBlindado" />








            </LinearLayout>
            <View
                android:background="#dbdbdb"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                />
            <LinearLayout
                android:layout_height="55dp"
                android:layout_width="wrap_content" android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#1C1C1C"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="POSSUI SEGURO?" />




                <Switch
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:id="@+id/chkSeguro" />



            </LinearLayout>
            <View
                android:background="#dbdbdb"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                />
            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/layoutSeguradora"
                android:layout_height="55dp"
                android:layout_width="wrap_content" android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#1C1C1C"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="HelveticaNeue-Medium"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="SEGURADORA" />

                <Spinner
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/ddSeguradora"
                    android:layout_weight="1" />

            </LinearLayout>
            <View
                android:background="#dbdbdb"
                android:layout_width = "fill_parent"
                android:layout_height="1dip"
                />

            <LinearLayout
                android:layout_height="55dp"
                android:layout_width="wrap_content" android:orientation="horizontal">
            </LinearLayout>

        </LinearLayout>



    </ScrollView>

    <LinearLayout android:id="@+id/footer" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:layout_alignParentBottom="true" style="@android:style/ButtonBar" android:background="#FFF">

        <Button android:id="@+id/cancelButton" android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:background="#011F83"
            android:textColor="#FFFFFF"
            android:text="VOLTAR" />

        <View android:layout_height="fill_parent"
            android:layout_width="2px"
            android:textColor="#FFFFFF"
            android:background="#FFF"  />

        <Button android:id="@+id/btnNext" android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:background="#011F83"
            android:textColor="#FFFFFF" android:fontFamily="HelveticaNeue-Medium"
            android:text="PRÓXIMO" />
    </LinearLayout>




</RelativeLayout>
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="#dbdbdb"
        android:dividerHeight="1dp"
        android:background="#FFF"/>
</android.support.v4.widget.DrawerLayout>