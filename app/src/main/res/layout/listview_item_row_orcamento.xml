<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp">

    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/placeholder"
        android:layout_marginTop="10dp"
        android:id="@+id/imgOficina"
        android:layout_width="120dp"
        android:layout_height="120dp" />

    <ImageView
        android:layout_marginTop="-25dp"
        android:layout_marginRight="-25dp"
        android:layout_marginEnd="-25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/imgNovo"
        android:src="@drawable/ribbon_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:id="@+id/imgArrowRight"
        android:src="@drawable/arrow_right"
        android:layout_width="wrap_content"
        android:layout_below="@id/imgNovo"
        android:layout_height="wrap_content" />

    <TextView
        android:singleLine="true"
        android:layout_width="160dp"
        android:layout_marginTop="-10dp"
        android:layout_height="wrap_content"
        android:text="Oficina do Giovanni Gomes Saraiva"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/txtOficina"
        android:fontFamily="HelveticaNeue-Medium"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_toRightOf="@id/imgOficina"
        android:layout_toEndOf="@id/imgOficina"
        android:layout_below="@id/imgNovo"
        />

    <ImageView
        android:layout_toRightOf="@id/imgOficina"
        android:layout_toEndOf="@id/imgOficina"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/imgRating"
        android:src="@drawable/s_1_star_rating"
        android:layout_width="wrap_content"
        android:layout_below="@id/txtOficina"
        android:layout_height="wrap_content" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@id/imgOficina"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#E6E6E6"
        android:padding="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tempo para conserto:"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/lblTempo"
            android:fontFamily="HelveticaNeue-Medium"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#909090"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 dias"
            android:layout_toRightOf="@id/lblTempo"
            android:layout_toEndOf="@id/lblTempo"
            android:id="@+id/txtTempo"
            android:fontFamily="HelveticaNeue-Medium"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 123,00"
            android:id="@+id/txtValor"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="HelveticaNeue-Medium"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#001E6E"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Validade:"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/lblValidade"
            android:layout_below="@id/lblTempo"
            android:fontFamily="HelveticaNeue-Medium"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#909090"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblTempo"
            android:layout_marginTop="10dp"
            android:text="24/12/2014"
            android:layout_toRightOf="@id/lblValidade"
            android:layout_toEndOf="@id/lblValidade"
            android:id="@+id/txtValidade"
            android:fontFamily="HelveticaNeue-Medium"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />

        </RelativeLayout>


    </RelativeLayout>