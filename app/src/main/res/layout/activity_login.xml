<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"  android:background="#FFF">


    <ImageView
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:id="@+id/imgLogo"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logocar10" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="E-Mail"
            android:textColor="#141414"
            android:id="@+id/lblLogin"
            android:layout_gravity="" />


        <EditText
            android:text=""
            android:layout_below="@+id/lblLogin"
            android:layout_centerVertical="true"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:id="@+id/txtEmail"
            android:gravity="left"
            android:inputType="text"
            android:background="@drawable/edittextstyle"/>

        <TextView
            android:textColor="#141414"

            android:layout_marginTop="10dp"
            android:layout_below="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Senha"
            android:id="@+id/lblSenha"
            android:layout_gravity="" />

        <EditText
            android:text=""
            android:password="true"
            android:layout_below="@+id/lblSenha"
            android:layout_centerVertical="true"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:id="@+id/txtSenha"
            android:gravity="left"
            android:inputType="text"
            android:background="@drawable/edittextstyle"/>


    </RelativeLayout>

    <Button
        android:layout_marginTop="30dp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="ENTRAR"
        android:background="#FF681B"
        android:textColor="#fff"
        android:textStyle="bold"
        android:id="@+id/btnEntrar"
        android:layout_gravity="center_horizontal" />

    <TextView style="?android:textAppearanceMedium"
        android:layout_marginTop="20dp"
        android:lineSpacingMultiplier="1.2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#282828"
        android:gravity="center"
        android:text="Ou use sua conta do facebook" />

    <com.facebook.widget.LoginButton
        android:id="@+id/authButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp" />

</LinearLayout>